@model IEnumerable<AnimatedElementViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewData["Title"] = $"Анимированные элементы темы «{ViewBag.Topic}»";
    var topic = (string)ViewBag.Topic;
}

<div class="container-fluid">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        @foreach (var element in Model)
        {
            <div class="col-2 text-center mb-4">
                <img src="@Url.Content($"~/images/animated-elements/{element.Img}")"
                     class="img-fluid"
                     alt="@element.Name"
                     title="@element.Name" />
                <div class="small mt-2">@element.Name</div>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-action="ShowGroupsOfAnimatedElementsOnTheTopic" class="btn btn-secondary">
            ← Назад ко всем темам
        </a>
    </div>
</div>
