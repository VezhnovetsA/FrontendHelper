@model FrontendHelper.Models.ButtonViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <h2 class="mb-4">@Model.Name</h2>

    <div class="card shadow-sm p-4 mb-4">
        <div class="mb-3 text-center">
            <iframe src="@Url.Content($"~/buttons/{Model.ButtonCode}")"
                    frameborder="0"
                    style="border:none; width:100%; height:80px;">
            </iframe>
        </div>

        <div class="mb-3">
            <a href="@Url.Content($"~/buttons/{Model.ButtonCode}")"
               download="@Model.ButtonCode"
               class="btn btn-primary">
                Скачать HTML
            </a>
        </div>

    </div>

    <a asp-action="ShowAllButtons" class="btn btn-secondary">
        ← Назад ко всем кнопкам
    </a>
</div>
