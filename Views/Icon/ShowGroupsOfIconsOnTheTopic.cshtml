@using FrontendHelper.Models
@* @model IconGroupViewModel *@
@model IEnumerable<FrontendHelper.Models.IconGroupViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



@{
    ViewData["Title"] = "Иконки";
}

<div class="container-fluid">
    @* Перебираем каждую тему *@
    @foreach (var group in Model)
    {
        <div class="card mb-4 shadow-sm">

            <div class="card-header bg-white">
                <h5 class="mb-0">@group.Topic</h5>
            </div>

            <div class="card-body">

                <div class="row">
                    @* Выводим первые 6 иконок *@
                    @foreach (var icon in group.Icons)
                    {
                        <div class="col-2 text-center mb-3">
                            <img src="@Url.Content($"~/images/icons/{icon.Img}")"
                                 class="img-fluid" 
                                 alt="@icon.Name" 
                                 title="@icon.Name" />
                            <div class="small mt-1">@icon.Name</div>
                        </div>
                    }
                </div>

                <div class="text-end">
                    <a class="btn btn-link p-0" 
                       asp-action="ShowAllIconsOnTheTopic" 
                       asp-route-topic="@group.Topic">
                        Показать все →
                    </a>

                </div>

            </div>
        </div>
    }
</div>