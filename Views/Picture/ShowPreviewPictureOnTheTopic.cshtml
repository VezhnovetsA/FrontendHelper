@model IEnumerable<PictureViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid py-4">
    <h2 class="mb-4">Картинки</h2>
    <div class="row">
        @foreach (var pic in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content($"~/images/pictures/{pic.Img}")"
                         class="card-img-top"
                         alt="@pic.Name"
                         title="@pic.Name" />

                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title mb-2">@pic.Topic</h5>
                        <p class="card-text small text-truncate mb-3">@pic.Name</p>
                        <a asp-action="ShowAllPicturesOnTheTopic"
                           asp-route-topic="@pic.Topic"
                           class="mt-auto btn btn-link p-0">
                            Показать все в теме →
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>