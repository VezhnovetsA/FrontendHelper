@model IEnumerable<PictureViewModel>

<<div class="row">
    @foreach (var picture in Model)
    {
        <div class="col-6 col-md-4 col-lg-3 mb-4 d-flex">
            <div class="card flex-fill shadow-sm d-flex flex-column">
                <img src="@Url.Content($"~/images/pictures/{picture.Img}")"
                     class="card-img-top"
                     alt="@picture.Name"
                     title="@picture.Name" />

                <div class="card-body">
                    <h5 class="card-title mb-2">@picture.Name</h5>
                    <p class="card-text small text-truncate mb-0">@picture.Topic</p>
                </div>

                <div class="card-footer bg-transparent mt-auto">
                    <a href="@Url.Content($"~/images/pictures/{picture.Img}")"
                       download="@picture.Img"
                       class="btn btn-sm btn-outline-secondary w-100">
                        Скачать
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="ShowPreviewPictureOnTheTopic" class="btn btn-secondary">
        ← Назад к превью тем
    </a>
</div>
